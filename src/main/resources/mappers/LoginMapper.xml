<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ina.message.mappers.LoginMapper">

	<!-- login -->
    <select id="login" resultType="com.ina.message.VO.UserVO">
    	select * from user where nick=#{userid} and userpw=#{userpw}
    </select>
    
    
    <!-- 아이디 중복 체크 -->
    <select id="checkOverId" parameterType="String" resultType="int">
    	select count(*) from user where userid=#{user_id}
    </select>
    
    <!-- UserInfo -->
    <select id="getUserInfo" parameterType="int" resultType="com.ina.message.VO.UserVO">
    	SELECT * FROM user where userid=#{id};
    </select>
    
    <select id="userList" resultType="com.ina.message.VO.UserVO">
    	SELECT * FROM user;
    </select>
</mapper>
